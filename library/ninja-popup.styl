.ninja-popup {
  padding: 10px;
  > .ninja-point-down,
  > .ninja-point-up {
    border-right: 6px solid transparent;
    border-left: 6px solid transparent;
    position: absolute;
    &::before {
      border-right: 6px solid transparent;
      border-left: 6px solid transparent;
      content: '';
      left: -6px;
      position: absolute;
    }
  }
  > .ninja-point-down {
    border-top-style: solid;
    border-top-width: 8px;
    bottom: -9px;
    &::before {
      border-top-style: solid;
      border-top-width: 8px;
      top: -10px;
    }
  }
  > .ninja-point-up {
    top: -9px;
    border-bottom-style: solid;
    border-bottom-width: 8px;
    &::before {
      border-bottom-style: solid;
      border-bottom-width: 8px;
      bottom: -10px;
    }
  }
}
